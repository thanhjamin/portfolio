
<% if @remark.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@remark.errors.count, "error") %> prohibited this comment from being saved:</h2>

  <ul>
    <% @remark.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for([@remarkable, @remark]) do |f| %>
  <div>
    <%= f.label :author, "Name" %><br />
    <%= f.text_field :author, :class => "form-control", :placeholder => "John Snow" %>
  </div>

  <div>
    <%= f.label :author_email, "Email" %><br />
    <%= f.text_field :author_email, :class => "form-control", :placeholder => "JSnow@castleblack.org" %>
  </div>

  <div>
    <%= f.label :author_url, "URL" %><br />
    <%= f.text_field :author_url, :class => "form-control" %>
  </div>

  <div>
    <%= f.label :content, "Comment" %><br />
    <%= f.text_area :content, :class => "form-control", :placeholder => "I heart white walkers" %>
  </div>
  <%= f.hidden_field :referrer, value: request.referrer %>
  <%= f.hidden_field :comment_id, value: @comment.id %>
</br>
<div>
  <%= f.submit "Submit", :class => 'btn btn-primary center' %>
</div>
<% end %>



